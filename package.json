{
  "name": "mms",
  "version": "1.0.0",
  "description": "Multiplayer Minesweeper",
  "main": "server/main.js",
  "scripts": {
    "build": "tsc",
    "dev": "NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/webpack-mix/setup/webpack.config.js",
    "watch": "NODE_ENV=development node_modules/webpack/bin/webpack.js --watch --progress --hide-modules --config=node_modules/webpack-mix/setup/webpack.config.js",
    "hot": "NODE_ENV=development webpack-dev-server --inline --hot --config=node_modules/webpack-mix/setup/webpack.config.js",
    "production": "NODE_ENV=production node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/webpack-mix/setup/webpack.config.js",
    "serve": "node --inspect=5858 -r ts-node/register ./server/main.ts",
    "serve:watch": "nodemon",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chclouse/mms.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chclouse/mms/issues"
  },
  "homepage": "https://github.com/chclouse/mms#readme",
  "devDependencies": {
    "@types/chai": "^4.2.8",
    "@types/dotenv": "^8.2.0",
    "@types/jquery": "^3.3.31",
    "@types/mocha": "^7.0.1",
    "@types/node": "^13.5.2",
    "@types/random": "^2.1.0",
    "@types/ws": "^7.2.1",
    "chai": "^4.2.0",
    "mocha": "^7.0.1",
    "node-sass": "^4.13.1",
    "nodemon": "^2.0.2",
    "resolve-url-loader": "^3.1.0",
    "sass-loader": "^8.0.2",
    "ts-lint": "^4.5.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-mix": "^3.0.0"
  },
  "dependencies": {
    "async": "^3.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "fabric": "^4.0.0-beta.5",
    "jquery": "^3.4.1",
    "jsdom": "^16.0.1",
    "mustache-express": "^1.3.0",
    "pixi-viewport": "^4.6.0",
    "pixi.js": "^5.2.0",
    "random": "^2.1.1",
    "ws": "^7.2.1"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "server"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
